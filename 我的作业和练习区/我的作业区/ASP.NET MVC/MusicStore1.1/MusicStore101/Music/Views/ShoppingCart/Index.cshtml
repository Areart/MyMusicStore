@model Music.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<h2>
    <i class="glyphicon glyphicon-shopping-cart"></i>
    <em>浏览</em>您的购物车
</h2>
<p class="button">
    @Html.ActionLink("马上购买","buy","Order")
</p>
<table>
    <tr>
        <td>专辑名</td>
        <td>单价</td>
        <td>数量</td>
        <td>操作</td>
    </tr>

    <tbody id="tbCart">
@foreach (var item in Model.CartItems)
{
    <tr>
        <td>@Html.ActionLink(item.Album.Title,"detail","Store",new {})</td>
        <td>@item.Album.Price.ToString("C")</td>
        <td>@item.Count</td>
        <td><a href="#" onclick="removeCart('@item.ID');">
            <i class="glyphicon glyphicon-remove">
                移除购物车
            </i>
        </a></td>
    </tr>
}
    <tr>
        <td></td>
        <td></td>
        <td>总价</td>
        <td>@Model.CartTotaLPrice.ToString("C")</td>
    </tr>
    </tbody>
</table>


