@model IEnumerable<MusicStoreEntity.Album>
@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div id="promotion" class="col-xs-12">
</div>
<h3><em>新歌</em>上架</h3>
<div class="col-xs-12">
    <ul id="album-list">
        @foreach (var item in Model)
        {
            <li>
                <a href="@Url.Action("detail","store",new {id=item.ID})">
                    <img alt="@item.Title" src="@item.AlbumArtUrl" />
                    <span>@item.Artist.Name</span>.<span>@item.Title</span>
                </a>
            </li>
        }
    </ul>
</div>

